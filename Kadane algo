//Kadane's Algorithm is used to solve the famous problem - Maximum Subarray Sum
//maxi=arr[0]
//sum=0
//1>sum=sum+arr[i]
//2>maxi=maximum of sum and maxi
//3>if sum<0 put sum=0



class Solution {
public:
    int maxSubArray(vector<int>& arr) {
        int sum=0;
        int maxi=arr[0];
        for(int i=0;i<arr.size();i++)
        {
            sum+=arr[i];
            maxi=max(maxi,sum);
            if(sum<0)
            sum=0;
        }

        return maxi;


    }
};
